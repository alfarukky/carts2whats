<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/navbar") %>
    <section class="error-section py-5 min-vh-100 d-flex align-items-center">
      <div class="container text-center">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <h1 class="display-1 fw-bold text-danger">500</h1>
            <h2 class="fw-bold text-dark mb-3">Internal Server Error</h2>
            <p class="text-muted mb-4"><%= message %></p>
            <% if (error && error.stack) { %>
              <details class="text-start mt-3">
                <summary class="btn btn-outline-secondary btn-sm">Error Details</summary>
                <pre class="mt-2 p-3 bg-dark text-light rounded"><%= error.stack %></pre>
              </details>
            <% } %>
            <div class="mt-4">
              <a href="/" class="btn btn-primary btn-lg me-2">Go Home</a>
              <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">Go Back</button>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include("partials/footer") %>
  </body>
</html>
