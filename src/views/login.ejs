<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head", { title: "Login Admin" }) %>
  <body>
    <%- include("partials/errorMsg") %>

    <section class="login-section">
      <div class="container py-5">
        <div class="row justify-content-center align-items-center">
          <!-- Illustration -->
          <div class="col-md-6 text-center mb-4" data-aos="fade-right">
            <img
              src="/images/signin.svg"
              alt="Admin Panel Illustration"
              class="img-fluid auth-width"
            />
          </div>

          <!-- Login Form -->
          <div class="col-md-6" data-aos="fade-left">
            <div class="p-5 bg-white rounded-4 shadow-sm">
              <h2 class="fw-bold text-dark mb-2 text-heading">
                Sign in to Admin Panel
              </h2>
              <p class="text-muted mb-4">
                Welcome back Admin! Enter your credentials to continue.
              </p>

              <form id="adminLoginForm" action="/api/auth/login" method="POST">
                <div class="row g-3">
                  <div class="col-12">
                    <input
                      type="email"
                      class="form-control p-3"
                      id="email"
                      name="email"
                      placeholder="Email"
                      required
                    />
                  </div>

                  <div class="col-12">
                    <input
                      type="password"
                      class="form-control p-3"
                      id="password"
                      name="password"
                      placeholder="Password"
                      required
                    />
                  </div>

                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <input
                        type="checkbox"
                        id="rememberMe"
                        class="form-check-input me-1"
                        name="rememberMe"
                      />
                      <label for="rememberMe" class="form-check-label">
                        Remember me
                      </label>
                    </div>
                    <a href="#" class="text-success fw-semibold">
                      Forgot password?
                    </a>
                  </div>

                  <div class="col-12">
                    <button
                      type="submit"
                      class="btn btn-success w-100 py-3 fw-semibold btn-animate-1"
                    >
                      Sign In as Admin
                    </button>
                  </div>
                </div>
              </form>

              <p class="text-center mt-4 text-muted">
                Don't have an account?
                <a href="/api/auth/register" class="text-success fw-semibold">
                  Sign Up
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include("partials/footer") %>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/aos.js"></script>

    <script>
      AOS.init({ duration: 900, easing: "ease-out-cubic", once: true });
    </script>
  </body>
</html>
