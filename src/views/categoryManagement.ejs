<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/errorMsg") %>
    <%- include('partials/navbar') %>
    
    <div class="container py-4">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Manage Categories</h2>
            <a href="/api/products" class="btn btn-secondary btn-animate-1">‚Üê Back to Products</a>
          </div>

          <!-- Add New Category -->
          <div class="card mb-4  form-product">
            <div class="card-header">
              <h5 class="mb-0">Add New Category</h5>
            </div>
            <div class="card-body">
              <form method="POST" action="/api/categories" enctype="multipart/form-data">
                <div class="row">
                  <div class="col-md-6">
                    <input
                      type="text"
                      name="name"
                      class="form-control"
                      placeholder="Category name"
                      required
                      maxlength="20"
                    />
                  </div>
                  <div class="col-md-4">
                    <input
                      type="file"
                      name="image"
                      class="form-control"
                      accept="image/*"
                    />
                    <small class="text-muted">Optional category icon</small>
                  </div>
                  <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">
                      <i class="fa fa-plus"></i> Add
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>

          <!-- Categories List -->
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Existing Categories</h5>
            </div>
            <div class="card-body">
              <% if (categories.length === 0) { %>
                <p class="text-muted">No categories found.</p>
              <% } else { %>
                <div class="list-group">
                  <% categories.forEach(category => { %>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                      <div class="d-flex align-items-center">
                        <% if (category.image) { %>
                          <img src="/uploads/<%= category.image %>" alt="<%= category.name %>" class="me-2" style="width: 30px; height: 30px; object-fit: cover; border-radius: 50%;">
                        <% } %>
                        <span><%= category.name %></span>
                        <% if (category.is_popular) { %>
                          <span class="badge bg-primary ms-2">Popular</span>
                        <% } %>
                      </div>
                      <div>
                        <form method="POST" action="/api/categories/<%= category.id %>/toggle-popular" class="d-inline me-2">
                          <button type="submit" class="btn btn-sm <%= category.is_popular ? 'btn-warning' : 'btn-outline-primary' %>">
                            <i class="fa fa-star"></i> <%= category.is_popular ? 'Remove from Homepage' : 'Add to Homepage' %>
                          </button>
                        </form>
                        <button type="button" class="btn btn-outline-secondary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#editImageModal<%= category.id %>">
                          <i class="fa fa-image"></i> Change Image
                        </button>
                        <% if (category.name !== 'Others') { %>
                          <form method="POST" action="/api/categories/<%= category.id %>/delete" class="d-inline">
                            <button 
                              type="submit" 
                              class="btn btn-danger btn-sm"
                              onclick="return confirm('Delete <%= category.name %>? Products will be moved to Others category.')"
                            >
                              <i class="fa fa-trash"></i> Delete
                            </button>
                          </form>
                        <% } else { %>
                          <span class="badge bg-secondary">Protected</span>
                        <% } %>
                      </div>
                    </div>
                  <% }) %>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Image Modals -->
    <% categories.forEach(category => { %>
    <div class="modal fade" id="editImageModal<%= category.id %>" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Change Image for "<%= category.name %>"</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <form method="POST" class="form-product" action="/api/categories/<%= category.id %>/update-image" enctype="multipart/form-data">
            <div class="modal-body">
              <% if (category.image) { %>
                <div class="text-center mb-3">
                  <img src="/uploads/<%= category.image %>" alt="Current image" class="img-thumbnail" style="max-width: 100px;">
                  <p class="small text-muted mt-1">Current image</p>
                </div>
              <% } %>
              <div class="mb-3">
                <label class="form-label">New Image</label>
                <input type="file" name="image" class="form-control" accept="image/*" required>
                <small class="text-muted">JPG, PNG, WebP, or GIF. Max 2MB.</small>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Update Image</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% }) %>

    <%- include("partials/footer") %>
    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
