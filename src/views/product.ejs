<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/errorMsg") %>
    <nav
      class="navbar navbar-expand-md border-top d-none d-md-block shadow-sm py-0 pb-3"
    >
      <div
        class="container py-3 d-flex align-items-center justify-content-between"
        data-aos="fade-down"
      >
        <!-- Logo -->
        <div class="d-flex align-items-center">
          <img src="" alt="logo" class="me-2" />
          <h4 class="m-0 fw-bold text-success">MorishCart</h4>
        </div>

        <!-- Search -->
        <div class="flex-grow-1 mx-4 d-none d-md-block">
          <form class="d-flex" role="search">
            <input
              class="form-control"
              type="search"
              placeholder="Type to search..."
              aria-label="Search"
            />
            <button class="btn btn-outline-success btn-animate" type="submit">
              Search
            </button>
          </form>
        </div>

        <div class="d-flex align-items-center gap-4">
          <!-- Heart -->
          <div class="position-relative">
            <span
              class="rounded-circle border d-flex align-items-center justify-content-center p-2 bg-white"
            >
              <i class="fa-solid fa-heart text-success"></i>
            </span>
            <span
              class="position-absolute top-0 end-0 translate-middle badge bg-success rounded-pill"
              >5</span
            >
          </div>

          <!-- User -->
          <div class="position-relative">
            <span
              class="rounded-circle border border-success d-flex align-items-center justify-content-center p-2 bg-white"
            >
              <i class="fa-solid fa-user text-success"></i>
            </span>
          </div>

          <!-- Cart -->
          <div class="position-relative">
            <span
              class="rounded-circle border d-flex align-items-center justify-content-center p-2 bg-white"
            >
              <i class="fa-solid fa-cart-shopping text-success"></i>
            </span>
            <span
              class="position-absolute top-0 end-0 translate-middle badge bg-success rounded-pill"
              >1</span
            >
          </div>
        </div>
      </div>

      <div class="container">
        <button
          class="navbar-toggler"
          data-bs-toggle="collapse"
          data-bs-target="#mainNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
          <ul class="navbar-nav align-items-center">
            <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="#">About</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Blog</a></li>
            <li class="nav-item">
              <a class="nav-link" href="./contact.html">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container py-3">
      <h2 class="fw-bold text-heading text-center mb-5">
        Explore Our Products
      </h2>

      <% if (admin) { %>
      <a href="/api/products/add" class="btn btn-success mb-3"
        >Add New Product</a
      >
      <% } %>

      <div class="row g-4">
        <% products.forEach(product => { %>
        <div class="col-6 col-md-4 col-lg-3 col-xl-2" data-aos="zoom-in">
          <div class="product-card p-3 border rounded-3 position-relative">
            <!-- Badge -->
            <span
              class="badge <%= badgeClasses[product.badge] %> position-absolute top-0 start-0 m-2"
            >
              <%= product.badge !== "none" ? product.badge.toUpperCase() : "" %>
            </span>

            <!-- Product Image -->
            <div class="product-img text-center">
              <img
                src="/uploads/<%= product.image %>"
                alt="<%= product.name %>"
                class="img-fluid"
              />
            </div>

            <!-- Category -->
            <p class="text-muted small mt-3 mb-1"><%= product.category %></p>

            <!-- Product Name -->
            <h6 class="fw-bold"><%= product.name %></h6>

            <!-- Rating -->
            <div class="rating text-warning mb-1">
              <% for (let s = 1; s <= 5; s++) { %> <% if (s <= product.rating) {
              %>
              <i class="fa fa-star"></i>
              <% } else { %>
              <i class="fa fa-star-o"></i>
              <% } %>
              <% } %>
              <span class="text-muted small">(<%= product.reviews %>)</span>
            </div>

            <!-- Prices -->
            <p class="mb-1 d-flex justify-content-between">
              <span class="fw-bold text-dark">$<%= product.price %></span>

              <% if (product.old_price) { %>
              <span class="text-muted text-decoration-line-through small">
                $<%= product.old_price %>
              </span>
              <% } %>
            </p>

            <!-- Add to Cart Button -->
            <a class="btn btn-success btn-sm rounded-pill w-100">
              <i class="fa fa-shopping-cart me-2"></i> Add to Cart
            </a>
          </div>

          <!-- Admin Controls -->
          <% if (admin) { %>
          <div class="mt-2 d-flex flex-column">
            <a
              href="/api/products/<%= product.id %>/edit"
              class="btn btn-warning btn-sm mb-1"
            >
              Edit
            </a>

            <form action="/api/products/<%= product.id %>/delete" method="GET">
              <button class="btn btn-danger btn-sm mb-1 w-100">Delete</button>
            </form>

            <!-- Popular toggle -->
            <% if (product.is_popular === 1) { %>
            <a
              href="/api/products/<%= product.id %>/toggle-popular"
              class="btn btn-secondary btn-sm w-100"
              >Remove Popular</a
            >
            <% } else { %>
            <a
              href="/api/products/<%= product.id %>/toggle-popular"
              class="btn btn-primary btn-sm w-100"
              >Make Popular</a
            >
            <% } %>
          </div>
          <% } %>
        </div>
        <% }) %>
      </div>
    </div>
    <%-include("partials/footer")  %>
    <!-- Back to Top Button -->
    <button id="toTopBtn" class="to-top-btn">
      <i class="fa-solid fa-arrow-up"></i>
    </button>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/aos.js"></script>
    <script>
      AOS.init({
        duration: 800,
        easing: "ease-out-quart",
        once: true, // animation happens once
        offset: 120,
      });
    </script>
  </body>
</html>
