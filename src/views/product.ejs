<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/errorMsg") %>
    <nav
      class="navbar navbar-expand-md border-top d-none d-md-block shadow-sm py-0 pb-3"
    >
      <div
        class="container py-3 d-flex align-items-center justify-content-between"
        data-aos="fade-down"
      >
        <!-- Logo -->
        <div class="d-flex align-items-center">
          <img src="" alt="logo" class="me-2" />
          <h4 class="m-0 fw-bold text-success">MorishCart</h4>
        </div>

        <!-- Search -->
        <div class="flex-grow-1 mx-4 d-none d-md-block">
          <form class="d-flex" role="search">
            <input
              class="form-control"
              type="search"
              placeholder="Type to search..."
              aria-label="Search"
            />
            <button class="btn btn-outline-success btn-animate" type="submit">
              Search
            </button>
          </form>
        </div>

        <div class="d-flex align-items-center gap-4">
          <!-- Heart -->
          <div class="position-relative">
            <span
              class="rounded-circle border d-flex align-items-center justify-content-center p-2 bg-white"
            >
              <i class="fa-solid fa-heart text-success"></i>
            </span>
            <span
              class="position-absolute top-0 end-0 translate-middle badge bg-success rounded-pill"
              >5</span
            >
          </div>

          <!-- User -->
          <div class="position-relative">
            <span
              class="rounded-circle border border-success d-flex align-items-center justify-content-center p-2 bg-white"
            >
              <i class="fa-solid fa-user text-success"></i>
            </span>
          </div>

          <!-- Cart -->
          <div class="position-relative">
            <span
              class="rounded-circle border d-flex align-items-center justify-content-center p-2 bg-white"
            >
              <i class="fa-solid fa-cart-shopping text-success"></i>
            </span>
            <span
              class="position-absolute top-0 end-0 translate-middle badge bg-success rounded-pill"
              >1</span
            >
          </div>
        </div>
      </div>

      <div class="container">
        <button
          class="navbar-toggler"
          data-bs-toggle="collapse"
          data-bs-target="#mainNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
          <ul class="navbar-nav align-items-center">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="">About</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Blog</a></li>
            <li class="nav-item">
              <a class="nav-link" href="/api/contact">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container py-3">
      <h2 class="fw-bold text-heading text-center my-3">
        Explore Our Products
      </h2>
      <div class="d-flex justify-content-end align-items-center mb-4">
        <!-- Filters -->
        <form method="GET" action="/api/products" class="d-flex gap-2">
          <select
            name="category"
            class="form-select form-select-sm"
            onchange="this.form.submit()"
          >
            <option value="">All Categories</option>

            <% const categories = [
              "Groceries",
              "Personal Care",
              "Snacks",
              "Household",
              "Drinks",
              "Baby Care",
              "Others"
            ]; %>

            <% categories.forEach(cat => { %>
              <option
                value="<%= cat %>"
                <%= filters?.category === cat ? "selected" : "" %>
              >
                <%= cat %>
              </option>
            <% }) %>
          </select>

          <!-- Sort Filter -->
          <select
            name="sort"
            class="form-select form-select-sm"
            onchange="this.form.submit()"
          >
            <option value="">Sort</option>
            <option
              value="newest"
              <%= filters?.sort === "newest" ? "selected" : "" %>
            >
              Newest
            </option>
            <option
              value="price_asc"
              <%= filters?.sort === "price_asc" ? "selected" : "" %>
            >
               Price: Low → High
            </option>
            <option
              value="price_desc"
              <%= filters?.sort === "price_desc" ? "selected" : "" %>
            >
             Price: High → Low
            </option>
          </select>

        </form>
      </div>

      <% if (admin) { %>
      <a href="/api/products/add" class="btn btn-success mb-3 btn-animate-1">
        <i class="fa fa-plus"></i>
        Add New Product
      </a>

      <% } %>

      <div class="row g-4">
        <% products.forEach(product => { %>
        <div class="col-6 col-md-4 col-lg-3 col-xl-2" data-aos="zoom-in">
          <div class="product-card p-3 border rounded-3 position-relative">
            <!-- Badge -->
            <span
              class="badge <%= badgeClasses[product.badge] %> position-absolute top-0 start-0 m-2"
            >
              <%= product.badge !== "none" ? product.badge.toUpperCase() : "" %>
            </span>

            <!-- Product Image -->
            <div class="product-img text-center">
              <img
                src="/uploads/<%= product.image %>"
                alt="<%= product.name %>"
                class="img-fluid"
              />
            </div>

            <!-- Category -->
            <p class="text-muted small mt-3 mb-1"><%= product.category %></p>

            <!-- Product Name -->
            <h6 class="fw-bold"><%= product.name %></h6>

            <!-- Rating -->
            <div class="rating text-warning mb-1">
              <% for (let s = 1; s <= 5; s++) { %> <% if (s <= product.rating) {
              %>
              <i class="fa fa-star"></i>
              <% } else { %>
              <i class="fa fa-star-o"></i>
              <% } %>
              <% } %>
              <span class="text-muted small">(<%= product.reviews %>)</span>
            </div>

            <!-- Prices -->
            <p class="mb-1 d-flex justify-content-between">
              <span class="fw-bold text-dark">$<%= product.price %></span>

              <% if (product.old_price) { %>
              <span class="text-muted text-decoration-line-through small">
                $<%= product.old_price %>
              </span>
              <% } %>
            </p>

            <!-- Add to Cart Button -->
            <a class="btn btn-outline-success btn-sm w-100">
              <i class="fa fa-shopping-cart me-2"></i> Add to Cart
            </a>
            <!-- Modal -->
            <button
              class="btn btn-outline-dark btn-sm w-100 mt-2"
              data-bs-toggle="modal"
              data-bs-target="#productModal"
              data-id="<%= product.id %>"
              data-name="<%= product.name %>"
              data-category="<%= product.category %>"
              data-description="<%= product.description || '' %>"
              data-price="<%= product.price %>"
              data-oldprice="<%= product.old_price || '' %>"
              data-image="/uploads/<%= product.image %>"
              data-video="<%= product.video_url || '' %>"
            >
              View Details
            </button>
          </div>
          <!-- Admin Controls -->
          <% if (admin) { %>
          <div class="mt-2 d-flex flex-column">
            <a
              href="/api/products/<%= product.id %>/edit"
              class="btn btn-warning btn-sm mb-1"
            >
              Edit
            </a>

            <form action="/api/products/<%= product.id %>/delete" method="GET">
              <button class="btn btn-danger btn-sm mb-1 w-100">Delete</button>
            </form>

            <!-- Popular toggle -->
            <% if (product.is_popular === 1) { %>
            <a
              href="/api/products/<%= product.id %>/toggle-popular"
              class="btn btn-secondary btn-sm w-100"
              >Remove Popular</a
            >
            <% } else { %>
            <a
              href="/api/products/<%= product.id %>/toggle-popular"
              class="btn btn-primary btn-sm w-100"
              >Make Popular</a
            >
            <% } %>
          </div>
          <% } %>
        </div>
        <% }) %>
      </div>
    </div>
    <!-- Product Details Modal -->
    <div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4">
          <div class="modal-header">
            <h5 class="modal-title fw-bold" id="modalProductName"></h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          <div class="modal-body">
            <div class="row g-4">
              <!-- Image -->
              <div class="col-md-6 text-center">
                <img
                  id="modalProductImage"
                  src=""
                  class="img-fluid rounded"
                  alt=""
                />
              </div>

              <!-- Details -->
              <div class="col-md-6">
                <p class="text-muted mb-1" id="modalProductCategory"></p>

                <p id="modalProductDescription" class="small"></p>

                <div class="d-flex align-items-center mb-3">
                  <span class="fw-bold fs-4 me-2" id="modalProductPrice"></span>
                  <span
                    class="text-muted text-decoration-line-through small"
                    id="modalProductOldPrice"
                  ></span>
                </div>
                <div>
                  <!-- Watch Video -->
                  <a
                    id="modalVideoBtn"
                    target="_blank"
                    class="btn btn-outline-dark d-none"
                  >
                    ▶ Watch Video
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%-include("partials/footer")  %>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/aos.js"></script>
    <script>
      AOS.init({
        duration: 800,
        easing: "ease-out-quart",
        once: true, // animation happens once
        offset: 120,
      });
    </script>
  </body>
</html>
