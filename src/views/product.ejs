<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/errorMsg") %>
    <%- include('partials/navbar') %>
    <div class="container py-3">
      <h2 class="fw-bold text-heading text-center my-3">
        Explore Our Products
      </h2>
      <div class="d-flex justify-content-end align-items-center mb-4">
        <!-- Filters -->
        <form method="GET" action="/api/products" class="d-flex gap-2">
          <select
            name="category"
            class="border-label form-select form-select-sm mt-4"
            onchange="this.form.submit()"
          >
            <option value="">All Categories</option>

            <% const categories = [
              "Groceries",
              "Personal Care",
              "Snacks",
              "Household",
              "Drinks",
              "Baby Care",
              "Others"
            ]; %>

            <% categories.forEach(cat => { %>
              <option
                value="<%= cat %>"
                <%= filters?.category === cat ? "selected" : "" %>
              >
                <%= cat %>
              </option>
            <% }) %>
          </select>

          <!-- Sort Filter -->
          <select
            name="sort"
            class="border-label form-select form-select-sm mt-4"
            onchange="this.form.submit()"
          >
            <option value="">Sort</option>
            <option
              value="newest"
              <%= filters?.sort === "newest" ? "selected" : "" %>
            >
              Newest
            </option>
            <option
              value="price_asc"
              <%= filters?.sort === "price_asc" ? "selected" : "" %>
            >
               Price: Low → High
            </option>
            <option
              value="price_desc"
              <%= filters?.sort === "price_desc" ? "selected" : "" %>
            >
             Price: High → Low
            </option>
          </select>

        </form>
      </div>

      <% if (admin) { %>
      <a href="/api/products/add" class="btn btn-success mb-3 btn-animate-1">
        <i class="fa fa-plus"></i>
        Add New Product
      </a>

      <% } %>

      <div class="row g-4">
        <% products.forEach(product => { %>
        <div class="col-6 col-md-4 col-lg-3 col-xl-2"<%= shouldAnimate ? ' data-aos="zoom-in"' : '' %>>
          <div class="product-card p-3 border rounded-3 position-relative">
            <!-- Badge -->
            <span
              class="badge <%= product.badgeClass %> position-absolute top-0 start-0 m-2"
            >
              <%= product.badge !== "none" ? product.badge.toUpperCase() : "" %>
            </span>

            <!-- Out of Stock Badge -->
            <% if (product.is_out_of_stock) { %>
            <span class="badge bg-danger position-absolute top-0 end-0 m-2">
              OUT OF STOCK
            </span>
            <% } %>

            <!-- Product Image -->
            <div class="product-img text-center">
              <img
                src="/uploads/<%= product.image %>"
                alt="<%= product.name %>"
                class="img-fluid"
                width="200"
                height="200"
                loading="lazy"
                data-full="/uploads/<%= product.image %>"
                onerror="this.src='/images/placeholder-product.svg'; this.onerror=null;"
              />
            </div>

            <!-- Category -->
            <p class="text-muted small mt-3 mb-1"><%= product.category %></p>

            <!-- Product Name -->
            <div class="fw-bold"><%= product.name %></div>

            <!-- Rating -->
            <div class="rating text-warning mb-1">
              <% 
                function safeRating(rating) {
                  const r = parseFloat(rating);
                  return (r >= 1 && r <= 5) ? r : 0;
                }
                const validRating = safeRating(product.rating);
              %>
              <% for (let s = 1; s <= 5; s++) { %> <% if (s <= validRating) {
              %>
              <i class="fa fa-star"></i>
              <% } else { %>
              <i class="fa fa-star-o"></i>
              <% } %>
              <% } %>
              <span class="text-muted small">(<%= product.reviews %>)</span>
            </div>

            <!-- Prices -->
            <p class="mb-1 d-flex justify-content-between">
              <span class="fw-bold text-dark">₦<%= product.price %></span>

              <% if (product.old_price) { %>
              <span class="text-muted text-decoration-line-through small">
                ₦<%= product.old_price %>
              </span>
              <% } %>
            </p>
            <!-- Add to Cart -->
            <% if (product.is_out_of_stock) { %>
            <button
              type="button"
              class="btn btn-secondary btn-sm w-100"
              disabled
            >
              <i class="fa fa-ban me-2"></i> Out of Stock
            </button>
            <% } else { %>
            <button
              type="button"
              class="btn btn-outline-success btn-sm w-100 add-to-cart-btn"
              data-id="<%= product.id %>"
              data-name="<%- JSON.stringify(product.name) %>"
              data-price="<%= product.price %>"
              data-image="/uploads/<%= product.image %>">
             <i class="fa fa-shopping-cart me-2"></i> Add to Cart
            </button>
            <% } %>

            <!-- Modal -->
            <button
              class="btn btn-outline-dark btn-sm w-100 mt-2"
              data-bs-toggle="modal"
              data-bs-target="#productModal"
              data-id="<%= product.id %>"
              data-name="<%- JSON.stringify(product.name) %>"
              data-category="<%- JSON.stringify(product.category) %>"
              data-description="<%- JSON.stringify(product.description || '') %>"
              data-price="<%= product.price %>"
              data-oldprice="<%= product.old_price || '' %>"
              data-image="/uploads/<%= product.image %>"
              data-video="<%- JSON.stringify(product.video_url || '') %>"
            >
              View Details
            </button>
          </div>
          <!-- Admin Controls -->
          <% if (admin) { %>
          <div class="mt-2 d-flex flex-column">
            <a
              href="/api/products/<%= product.id %>/edit"
              class="btn btn-warning btn-sm mb-1"
            >
              Edit
            </a>

            <form action="/api/products/<%= product.id %>/delete" method="POST" class="block-inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button 
                class="btn btn-danger btn-sm mb-1 w-100"
                onclick="return confirm('Are you sure you want to delete this product? This action cannot be undone.')"
              >
                Delete
              </button>
            </form>

            <!-- Popular toggle -->
            <% if (product.is_popular === 1) { %>
            <form action="/api/products/<%= product.id %>/toggle-popular" method="POST" class="block-inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-secondary btn-sm w-100 mb-1">Remove Popular</button>
            </form>
            <% } else { %>
            <form action="/api/products/<%= product.id %>/toggle-popular" method="POST" class="block-inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-primary btn-sm w-100 mb-1">Make Popular</button>
            </form>
            <% } %>

            <!-- Stock toggle -->
            <% if (product.is_out_of_stock) { %>
            <form action="/api/products/<%= product.id %>/toggle-stock" method="POST" class="block-inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-success btn-sm w-100">Restock Product</button>
            </form>
            <% } else { %>
            <form action="/api/products/<%= product.id %>/toggle-stock" method="POST" class="block-inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-outline-danger btn-sm w-100">Mark Out of Stock</button>
            </form>
            <% } %>
          </div>
          <% } %>
        </div>
        <% }) %>
      </div>

      <!-- Pagination -->
      <% if (pagination.totalPages > 1) { %>
      <nav class="mt-4">
        <ul class="pagination justify-content-center">
          <% if (pagination.hasPrev) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= pagination.currentPage - 1 %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">Previous</a>
          </li>
          <% } %>
          
          <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
          <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>"><%= i %></a>
          </li>
          <% } %>
          
          <% if (pagination.hasNext) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= pagination.currentPage + 1 %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">Next</a>
          </li>
          <% } %>
        </ul>
      </nav>
      <% } %>
    </div>
    <!-- Product Details Modal -->
    <div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4">
          <div class="modal-header">
            <h5 class="modal-title fw-bold" id="modalProductName"></h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          <div class="modal-body">
            <div class="row g-4">
              <!-- Image -->
              <div class="col-md-6 text-center">
                <img
                  id="modalProductImage"
                  src=""
                  class="img-fluid rounded"
                  alt=""
                  onerror="this.src='/images/placeholder-product.svg'; this.onerror=null;"
                />
              </div>

              <!-- Details -->
              <div class="col-md-6">
                <p class="text-muted mb-1" id="modalProductCategory"></p>

                <p id="modalProductDescription" class="small"></p>

                <div class="d-flex align-items-center mb-3">
                  <span class="fw-bold fs-4 me-2" id="modalProductPrice"></span>
                  <span
                    class="text-muted text-decoration-line-through small"
                    id="modalProductOldPrice"
                  ></span>
                </div>
                <div>
                  <!-- Watch Video -->
                  <a
                    id="modalVideoBtn"
                    target="_blank"
                    class="btn btn-outline-dark d-none"
                  >
                    ▶ Watch Video
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%-include("partials/footer")  %>
    
    <!-- Structured Data for SEO -->
    <script type="application/ld+json">
    <%- structuredData %>
    </script>
    
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/carts.js"></script>
    <script src="/js/script.js"></script>
    <% if (shouldAnimate) { %>
    <script src="/js/aos.js"></script>
    <script>
      AOS.init({
        duration: 800,
        easing: "ease-out-quart",
        once: true,
        offset: 120,
      });
    </script>
    <% } %>
  </body>
</html>
