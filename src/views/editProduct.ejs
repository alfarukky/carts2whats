<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>

  <body>
    <%- include("partials/errorMsg") %>

    <section class="container form-product py-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-semibold">Edit Product</h2>
        <a href="/api/products" class="btn btn-secondary btn-sm mb-3 btn-animate-1">
          ← Back to Products
        </a>
      </div>

      <form
        action="/api/products/<%= product.id %>/edit"
        method="POST"
        enctype="multipart/form-data"
        class="p-4 border rounded bg-white shadow-sm"
      >
        <!-- Name -->
        <div class="mb-3">
          <label class="form-label">Product Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            value="<%= product.name %>"
            required
          />
        </div>

        <!-- Category -->
        <div class="mb-3">
          <label class="form-label">Category</label>
          <select name="category" class="form-select" required>
            <option value="<%= product.category %>" selected>
              <%= product.category %>
            </option>
            <option value="Groceries">Groceries</option>
            <option value="Personal Care">Personal Care</option>
            <option value="Snacks">Snacks</option>
            <option value="Household">Household</option>
            <option value="Drinks">Drinks</option>
            <option value="Baby Care">Baby Care</option>
            <option value="Others">Others</option>
          </select>
        </div>

        <!-- Badge -->
        <div class="mb-3">
          <label class="form-label">Badge</label>
          <select name="badge" class="form-select">
            <option value="<%= product.badge %>" selected><%= product.badge %></option>
            <option value="none">None</option>
            <option value="hot">Hot</option>
            <option value="sale">Sale</option>
            <option value="promo">Promo</option>
            <option value="new">New</option>
          </select>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label class="form-label">Short Description</label>
          <textarea name="description" class="form-control" rows="3"><%= product.description %></textarea>
        </div>

        <!-- Prices -->
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Current Price (₦)</label>
            <input type="number" step="0.01" name="price" class="form-control" value="<%= product.price %>" required />
          </div>

          <div class="col-md-6">
            <label class="form-label">Old Price (₦)</label>
            <input type="number" step="0.01" name="old_price" class="form-control" value="<%= product.old_price %>" />
          </div>
        </div>

        <!-- Rating -->
        <div class="mb-3">
          <label class="form-label">Rating (1–5)</label>
          <select name="rating" class="form-select" required>
            <% 
              function safeRating(rating) {
                const r = parseFloat(rating);
                return (r >= 1 && r <= 5) ? r : 0;
              }
              const validRating = safeRating(product.rating);
            %>
            <% for (let r = 1; r <= 5; r++) { %>
              <option value="<%= r %>" <%= r == validRating ? "selected" : "" %>><%= r %> Star</option>
            <% } %>
          </select>
        </div>

        <!-- Review Count -->
        <div class="mb-3">
          <label class="form-label">Number of Reviews</label>
          <input type="number" name="reviews" value="<%= product.reviews %>" class="form-control" required />
        </div>

        <!-- Current Image -->
        <div class="mb-3">
          <label class="form-label">Current Image</label><br />
          <img src="/uploads/<%= product.image %>" width="120" class="rounded" />
        </div>

        <!-- Upload New Image -->
        <div class="mb-3">
          <label class="form-label">Replace Image</label>
          <input type="file" name="image" class="form-control" accept="image/*" />
          <small class="form-text text-muted">Maximum file size: 2MB. Supported formats: JPG, PNG, WebP</small>
        </div>

       <div class="mb-3">
          <label class="form-label">product video url</label>
          <input
          type="url"
          name="video_url"
          class="form-control"
          placeholder="https://youtube.com/..."
          value="<%= product.video_url || '' %>"
          />
          <small class="text-muted">
            Must be a full URL (YouTube, Instagram, etc.)
          </small>
        </div>

        <!-- Stock Status -->
        <div class="mb-3">
          <label class="form-label">Stock Status</label>
          <div class="form-check form-switch">
            <input 
              class="form-check-input" 
              type="checkbox" 
              name="is_out_of_stock" 
              value="1" 
              id="stockToggle"
              <% if (product.is_out_of_stock) { %>checked<% } %>
            />
            <label class="form-check-label" for="stockToggle">
              Mark as Out of Stock
            </label>
          </div>
          <small class="text-muted">
            Toggle this to mark the product as out of stock
          </small>
        </div>

        <button class="btn btn-success w-100 py-2 fw-semibold btn-animate-1">
          Update Product
        </button>
      </form>
    </div>
  </body>
</html>
